{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": [
      "src"
    ],
    "exclude": ["node_modules", "dist"],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-unused-vars",
        "no-implicit-any",
        "no-explicit-any",
        "require-await",
        "ban-ts-comment"
      ]
    }
  },
  "fmt": {
    "include": [
      "src",
      "deno.jsonc"
    ],
    "exclude": ["node_modules", "dist"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2
  }
}
